<% if notice %>
<div class="alert alert-danger" role="alert">
  <p id="notice"><%= notice %></p>
</div>
<% end %>

<div class="col-lg-9">
  <h1>Recently Created Events</h1>

  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Start date</th>
        <th>End date</th>
        <th>Location</th>
<!--         <th>Agenda</th> -->
        <th>Address</th>
        <th>Organizer</th>
        <th>Tags</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @events.each do |event| %>
        <tr>
          <td><%= event.title %></td>
          <td><%= l event.start_date, :format => :date_format %></td>
          <td><%= l event.end_date, :format => :date_format %></td>
          <td><%= event.location %></td>
<!--           <td><%= event.agenda %></td> -->
          <td><%= event.tags.length %></td>
          <td><%= event.organizer_id %></td>
          <td><% if (event.tags.length > 0) then %>
          <%= raw event.tags.map{ |t| link_to t.name, tag_path(t.name)}.join(', ') %>
          <% end %></td>
          <td><%= link_to 'Show', event %></td>
          <td><%= link_to 'Edit', edit_event_path(event) %></td>
          <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Event', new_event_path %>

  <br>  
</div>
<%= render "tag_cloud"%>



